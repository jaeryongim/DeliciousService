<% @posts.reverse.each do |post| %>
    <div class="panel">
      <div class="row panel-body">
        <div class="col-md-3">
        </div>
        <div class="col-md-3 text-right">
          <img src= "<%= post.image_url %>" class="img-rounded" width="150" height="150">
        </div>
        <div class="col-md-6">
          <h4><%= link_to post.title, "/foods/show/#{post.id}" %> (<%= post.comments.count %>)</h4>
          <p><span class="label label-warning"><%= post.category %></span></p>
          <p><strong><%= post.user.username %></strong></p>
        </div>
      </div>
    </div>
<% end %>